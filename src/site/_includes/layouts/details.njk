---
layout: layouts/base.njk
pageClass: details
templateEngineOverride: njk, md
---
<div class="template-summary">
  <h2>{{ page.title }}</h2>
  <ul class="meta tags">
  {%- for tag in tags -%}
    <li><a href="/tags#{{tag}}">{{tag}}</a></li>
  {% endfor -%}
  </ul>
  <img src="/images/previews/{{ preview | appendToName('-1000') }}" alt="Screenshot of a page created with {{ item.data.title }}" />
  <ul class="meta">
    <li class="link-example">Example: <a href="{{ example }}" target="_BLANK" rel="noopener">{{ example }}</a></li>
    <li class="link-repo">Repo: <a href="{{ repo }}" target="_BLANK" rel="noopener">{{ repo }}</a></li>
  </ul>
</div>
<main>
  <h3>About this template</h3>
  <div class="description">
  {{ content | safe }}
  <a href="https://app.netlify.com/start/deploy?repository={{repo}}">
    <img src="/images/deploy-button.svg" title="Deploy to Netlify">
  </a>
  <br/><a class="hint" href="/on-click-deploy">what does this button do?</a>
  </div>
</main>
